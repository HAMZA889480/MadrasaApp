<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_text"
        android:text="UPDATE RECORD"
        android:textSize="26dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="100dp"
        tools:ignore="HardcodedText,SpUsage" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student ID"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/StuId_text"
        android:textSize="24dp"
        android:layout_below="@+id/update_text"
        tools:ignore="HardcodedText,SpUsage" />


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/StudentID"
        android:inputType="textPersonName"
        android:layout_below="@id/StuId_text"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/StudentID"
        android:layout_below="@+id/update_text"
        android:background="@drawable/button_edit"
        android:textSize="18dp"
        android:id="@+id/btn_search"
        tools:ignore="HardcodedText,SpUsage" />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_layout"
        android:orientation="vertical"
        android:layout_below="@+id/StudentID"
        android:layout_marginTop="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Name_text"
            android:text="Full Name"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/FName"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sabak_text"
            android:text="Prev Sabak"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/PSabak"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sabaki_text"
            android:text="Prev Sabaki"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/PSabaki"/>

    </LinearLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_layout"
        android:orientation="vertical"
        android:layout_below="@+id/btn_search"
        android:layout_toRightOf="@id/left_layout"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="23dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NewName_text"
            android:text="Update Name"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:id="@+id/UpdatedFName"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateSabak_text"
            android:text="New Sabak"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="160dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/UpdateSabak"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateSabaki_text"
            android:text="New Sabaki"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/UpdateSabaki"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/left_layout"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/UpdateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_edit"

            android:backgroundTint="@color/splash"
            android:text="Update Record"
            android:textAlignment="center"
            android:textSize="22dp"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>


















</RelativeLayout>